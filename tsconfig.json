{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "skipLibCheck":true,
    "incremental": true,
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/example/assets/*": ["src/example/assets/*"],
      "@/example/components": ["src/example/components"],
      "@/example/base": ["src/example/base"],
      "@/example/config": ["src/example/config"],
      "@/example/dialog": ["src/example/dialog"],
      "@/example/i18n": ["src/example/i18n"],
      "@/example/lang/*": ["src/example/lang/*"],
      "@/example/logic": ["src/example/logic"],
      "@/example/markdown-it": ["src/example/markdown-it"],
      "@/example/router": ["src/example/router"],
      "@/example/styles/*": ["src/example/styles/*"],
      "@/example/sw": ["src/example/sw"],
      "@/example/views/*": ["src/example/views/*"],
      "@/lib": ["src/lib"],
      "@/lib/assets/*": ["src/lib/assets/*"],
      "@/lib/components": ["src/lib/components"],
      "@/lib/lang/*": ["src/lib/lang/*"],
      "@/lib/logic": ["src/lib/logic"],
      "@/lib/styles/*": ["src/lib/styles/*"],
      "@/firestore-ex": ["src/firestore-ex"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
