{
  "name": "functions",
  "scripts": {
    "lint": "cd .. && ./scripts/lint.sh functions",
    "build": "rm -rf lib && node scripts/gql.builder.js && tsc && cp ./src/serviceAccountKey.json ./lib",
    "serve": "npm run build && ./functions.config.dev.sh && firebase functions:config:get > .runtimeconfig.json && (tsc --watch & node scripts/gql.builder.js --watch & firebase serve --only functions --port=5010)",
    "test": "npm run build && ./functions.config.dev.sh && jest --runInBand",
    "deploy": "./functions.config.prod.sh && firebase deploy --only functions",
    "shell": "npm run build && ./functions.config.dev.sh && firebase functions:config:get > .runtimeconfig.json && firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/logging": "^5.3.1",
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/graphql": "^6.5.1",
    "@nestjs/platform-express": "^6.7.2",
    "apollo-server-express": "^2.9.4",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.1",
    "convert-hrtime": "^3.0.0",
    "cookie-parser": "^1.4.4",
    "dayjs": "^1.8.16",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.2.0",
    "firebase-tools": "^7.4.0",
    "graphql": "^14.5.8",
    "graphql-subscriptions": "^1.1.0",
    "graphql-toolkit": "^0.5.15",
    "graphql-type-json": "^0.3.0",
    "lodash": "^4.17.15",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "vary": "^1.1.2",
    "web-base-lib": "https://github.com/masterpg/web-base-lib.git"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.7.2",
    "@types/graphql-type-json": "^0.3.2",
    "@types/jest": "^24.0.18",
    "@types/supertest": "^2.0.8",
    "@types/vary": "^1.1.0",
    "chokidar": "^3.1.1",
    "glob": "^7.1.4",
    "jest": "^24.9.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "private": true
}
